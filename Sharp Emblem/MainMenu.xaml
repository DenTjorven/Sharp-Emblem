<Page x:Class="Sharp_Emblem.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sharp_Emblem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="#FFEDCB52">
        <Image x:Name="image" HorizontalAlignment="Center" Height="372" Margin="0,117,0,0" VerticalAlignment="Top" Width="422" Source="/SharpEmblemLogo.svg.png"/>
        <Button x:Name="SimSelect" Content="Start Battle Sim" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Height="27" Width="164" Click="SimSelect_Click"/>
        <Button x:Name="GameSelect" Content="Start Game" HorizontalAlignment="Center" Margin="0,323,0,0" VerticalAlignment="Top" Height="27" Width="164"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Center" Margin="0,395,0,0" VerticalAlignment="Top" Height="27" Width="77"/>

    </Grid>
</Page>
