<Page x:Class="Sharp_Emblem.Load"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sharp_Emblem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Load"
      Background="Transparent">

    <Grid Background="#FFEDCB52">
        <Image x:Name="image" HorizontalAlignment="Left" Height="143" Margin="10,31,0,0" VerticalAlignment="Top" Width="253" Source="/SharpEmblemLogo.svg.png"/>
        <Button x:Name="StartNewSelect" Content="Start New" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Height="27" Width="164" Click="StartNew_Click"/>
        <Button x:Name="LoadGameSelect" Content="Load Game" HorizontalAlignment="Center" Margin="0,323,0,0" VerticalAlignment="Top" Height="27" Width="164"/>
        <Button x:Name="VorigeSelect" Content="Vorige" HorizontalAlignment="Center" Margin="0,395,0,0" VerticalAlignment="Top" Height="27" Width="77" Click="VorigeSelect_Click"/>
        <Image x:Name="LoadScreenPic" HorizontalAlignment="Left" Height="430" Margin="438,23,0,0" VerticalAlignment="Top" Width="390" Source="/LoadScreenPicture.png"/>

    </Grid>
</Page>
